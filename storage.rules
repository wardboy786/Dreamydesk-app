
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users for files in the 'wallpapers' and 'category-thumbnails' folders
    match /wallpapers/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Optional: Allow authenticated users to write
    }

    match /category-thumbnails/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
    
    match /collection-thumbnails/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /notification-images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /blog-thumbnails/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
